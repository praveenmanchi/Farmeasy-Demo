---
// Fundations
import Text from "@/components/fundations/elements/Text.astro";

import Wrapper from "@/components/fundations/containers/Wrapper.astro";
// Icons
import Action from "@/components/fundations/icons/Action.astro";
import Integrity from "@/components/fundations/icons/Integrity.astro";
import Partnership from "@/components/fundations/icons/Partnership.astro";
const philosophyCards = [
  {
    icon: Integrity,
    title: "Sustainable Innovation",
    description:
      "We design solar-powered IoT systems that respect both the environment and your bottom line, delivering cutting-edge technology that works in harmony with nature.",
  },
  {
    icon: Action,
    title: "Precision Agriculture",
    description:
      "Our commitment to precision drives us to continuously innovate sensor technology, delivering real-time insights that empower data-driven farm management decisions.",
  },
  {
    icon: Partnership,
    title: "Farmer Partnership",
    description:
      "We work alongside farmers as trusted technology partners, understanding your unique challenges and collaborating to implement solutions that enhance productivity and sustainability.",
  },
];
---

<section>
  <Wrapper variant="standard" class="py-24">
    <div class="grid grid-cols-1 lg:grid-cols-4 items-start gap-y-8">
      <Text
        tag="p"
        variant="textXS"
        class="text-secondary-500 tracking-wide uppercase"
      >
        Company Values
      </Text>
      <div class="lg:col-span-3">
        <Text
          tag="h2"
          variant="displayLG"
          class="text-accent-800 font-display text-balance"
        >
          Our Philosophy
        </Text>
        <Text tag="p" variant="textLG" class="text-base-600 mt-4">
          At FarmEasy, we believe that exceptional agricultural technology
          begins with genuine partnership. We don't just deploy sensors—we build
          lasting relationships founded on trust, transparency, and an
          unwavering commitment to sustainable farming.
        </Text>
        <Text tag="p" variant="textBase" class="text-base-700 mt-2">
          We pair advanced IoT innovation with clear communication and practical
          implementation. From the first consultation to full deployment, you can
          expect proactive support, straightforward guidance, and solutions
          aligned with your farm's goals—whether that means water conservation or
          yield optimization.
        </Text>
      </div>
    </div>
    <div class="grid grid-cols-1 lg:grid-cols-3 mt-12 lg:mt-24 gap-8">
      {
        philosophyCards.map((card) => (
          <div class="bg-base-50  p-8 flex flex-col">
            {card.icon && <card.icon class="size-8 text-secondary-400 " />}
            <Text
              tag="h3"
              variant="displaySM"
              class="text-accent-800 font-display mt-12"
            >
              {card.title}
            </Text>
            <Text
              tag="p"
              variant="textSM"
              class="text-base-600 font-medium mt-2"
            >
              {card.description}
            </Text>
          </div>
        ))
      }
    </div>
  </Wrapper>
</section>
