---
// Assets
import { Image } from "astro:assets";
import farmIotField from "@/images/assets/farm-iot-field.jpg";
import greenhouseTech from "@/images/assets/greenhouse-tech.jpg";
// Fundations
import Text from "@/components/fundations/elements/Text.astro";
import Button from "@/components/fundations/elements/Button.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";

const approachSteps = [
  {
    title: "Farm Assessment",
    description:
      "Analyze your farm's unique needs, evaluate current operations, and design a customized IoT deployment plan that aligns with your agricultural goals.",
    bullets: [
      "Comprehensive site evaluation and needs analysis",
      "Custom sensor placement planning",
      "Integration roadmap with existing farm systems",
    ],
  },
  {
    title: "System Installation",
    description:
      "Deploy solar-powered IoT nodes and sensors across your fields. Our expert technicians ensure optimal placement for maximum coverage and reliability.",
    bullets: [
      "Professional installation of solar IoT hardware",
      "Network connectivity setup and testing",
      "Calibration for local soil and climate conditions",
    ],
  },
  {
    title: "Data Integration",
    description:
      "Connect your sensors to our secure cloud platform and configure real-time dashboards that deliver actionable insights for precision agriculture.",
    bullets: [
      "Cloud platform setup and data synchronization",
      "Custom dashboard configuration",
      "Mobile app access for on-the-go monitoring",
    ],
  },
  {
    title: "Ongoing Support",
    description:
      "Benefit from continuous monitoring, system optimization, and expert agricultural guidance to maximize your farm's productivity and sustainability.",
    bullets: [
      "24/7 system monitoring and alerts",
      "Regular firmware updates and improvements",
      "Dedicated agronomic support team",
    ],
  },
];
---

<section>
  <Wrapper variant="paddingLess" class="py-24">
    <div class="grid grid-cols-1 lg:grid-cols-2">
      <div>
        <div class="relative w-full lg:sticky lg:top-16 lg:h-screen">
          <Image
            src={farmIotField}
            width={1440}
            height={900}
            alt="FarmEasy - Modern farm with IoT sensors and solar technology"
            class="object-cover object-center w-full h-full bg-base-50"
            loading="eager"
            decoding="async"
          />
          <div
            class="lg:absolute lg:inset-0 size-full bg-accent-900 lg:bg-accent-900/90 flex flex-col items-start justify-start px-8 md:px-12 lg:px-24 z-10 py-24"
          >
            <div class="w-full">
              <Text
                tag="p"
                variant="textXS"
                class="text-secondary-400 tracking-wide uppercase"
              >
                How It Works
              </Text>
              <Text
                tag="h2"
                variant="displayLG"
                class="text-white font-display text-balance mt-12"
              >
                Our Implementation Process
              </Text>
              <Text tag="p" variant="textSM" class="text-base-300 mt-2">
                Every farm is unique, and so is our approach. We combine agricultural expertise with cutting-edge IoT technology and solar power solutions. Whether you're managing a small family farm or large-scale operations, we provide personalized implementation and dedicated support.
              </Text>
              <div
                class="mt-12 grid grid-cols-1 overflow-hidden lg:grid-cols-2 bg-white/5 backdrop-blur-sm"
              >
                <Image
                  src={greenhouseTech}
                  width={500}
                  height={500}
                  loading="eager"
                  decoding="async"
                  alt="Smart agriculture greenhouse with monitoring technology"
                  class="object-cover h-60 size-full object-top"
                />
                <figure class="p-4 flex flex-col h-full justify-between">
                  <blockquote>
                    <Text tag="p" variant="textSM" class="text-base-300 italic">
                      "FarmEasy transformed our irrigation management. Real-time soil moisture data helped us reduce water usage by 35% while improving crop yields."
                    </Text>
                  </blockquote>
                  <figcaption class="mt-3 flex items-center gap-3">
                    <Text
                      tag="p"
                      variant="textXS"
                      class="text-secondary-300 font-medium"
                    >
                      Sarah Chen, Owner,
                      <br />
                      Green Valley Orchards
                    </Text>
                  </figcaption>
                </figure>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="p-8 lg:p-20 bg-base-50">
        <ul class="space-y-12 pt-2">
          {
            approachSteps.map((step, idx) => (
              <li class="flex flex-col">
                <Text
                  tag="p"
                  variant="textXS"
                  class="text-secondary-500 tracking-wider uppercase font-bold"
                >
                  Step {idx + 1}
                </Text>
                <Text
                  tag="h3"
                  variant="displaySM"
                  class="text-accent-800 font-display mt-4"
                >
                  {step.title}
                </Text>
                <Text tag="p" variant="textBase" class="text-base-700 mt-2">
                  {step.description}
                </Text>
                <ul class="mt-3 space-y-1 list-inside list-disc">
                  {step.bullets.map((bullet) => (
                    <li>
                      <Text
                        tag="span"
                        variant="textSM"
                        class="text-base-600 font-medium"
                      >
                        {bullet}
                      </Text>
                    </li>
                  ))}
                </ul>
              </li>
            ))
          }
        </ul>
        <div class="pt-12 border-t border-base-200 mt-12">
          <Text
            tag="h3"
            variant="displaySM"
            class="text-accent-800 font-display"
          >
            Ready to modernize your farm?
          </Text>
          <Text tag="p" variant="textSM" class="text-base-600 mt-1">
            Schedule a free consultation to discuss your agricultural automation needs.
          </Text>
          <div class="flex flex-col sm:flex-row gap-2 mt-6">
            <Button
              isLink={true}
              href="/contact"
              variant="default"
              size="sm"
              class="w-full sm:w-fit"
            >
              Schedule Consultation
            </Button>
            <Button
              isLink={true}
              variant="muted"
              size="sm"
              href="/products"
              class="w-full sm:w-fit"
            >
              Explore Products
            </Button>
          </div>
        </div>
      </div>
    </div>
  </Wrapper>
</section>
