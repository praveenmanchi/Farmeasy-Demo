---
// Fundations
import Text from "@/components/fundations/elements/Text.astro";
import Button from "@/components/fundations/elements/Button.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
// Components
import CasesCard from "@/components/cases/CasesCard.astro";
// Content
import { getCollection } from "astro:content";
const allCases = await getCollection("cases");
// Select first 3 cases to highlight
const casesCount = allCases.length;
---
<section class="bg-base-50">
  <Wrapper variant="standard" class="py-24">
    <div class="grid grid-cols-1 lg:grid-cols-4 items-start gap-y-8">
      <Text
        tag="p"
        variant="textXS"
        class="text-secondary-500 tracking-wide uppercase"
      >
        Success Stories
      </Text>
      <div class="lg:col-span-3">
        <Text
          tag="h2"
          variant="displayLG"
          class="text-accent-800 font-display text-balance lg:col-span-2"
        >
          Farm Success Stories
        </Text>
        <Text tag="p" variant="textLG" class="text-base-600 mt-4">
          Explore our successful farm transformations and see how we've helped agricultural producers
          achieve operational excellence through IoT automation across various crops and
          farm sizes.
        </Text>
      </div>
    </div>
    <div class="grid grid-cols-1 lg:grid-cols-1 mt-12 lg:mt-24 gap-8 max-w-5xl mx-auto">
      {allCases.slice(0, 1).map((caseStudy) => <CasesCard post={caseStudy} />)}
    </div>
  </Wrapper>
</section>
