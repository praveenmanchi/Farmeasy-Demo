---
// Fundations
import BaseLayout from "@/layouts/BaseLayout.astro";
import Text from "@/components/fundations/elements/Text.astro";
import Button from "@/components/fundations/elements/Button.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
// Icons
import Plus from "@/components/fundations/icons/Plus.astro";
import Check from "@/components/fundations/icons/Check.astro";
import Goals from "@/components/fundations/icons/Goals.astro";
import Dollar from "@/components/fundations/icons/Dollar.astro";
import Action from "@/components/fundations/icons/Action.astro";
import Analisys from "@/components/fundations/icons/Analisys.astro";

const consultationBenefitList = [
  "No upfront costs or fees",
  "Expert agronomist consultation",
  "Clear farm assessment and recommendations",
  "Personalized IoT solution design",
];
const consultationBenefits = [
  {
    title: "No Cost Farm Assessment",
    description:
      "Get expert agricultural technology advice without any upfront fees or obligations. We believe every farmer deserves access to data-driven farming insights.",
    icon: Dollar,
  },
  {
    title: "Expert Farm Evaluation",
    description:
      "Receive a thorough analysis of your farm's current monitoring setup, irrigation efficiency, and soil health from experienced agronomists and IoT specialists.",
    icon: Analisys,
  },
  {
    title: "Clear Implementation Plan",
    description:
      "Walk away with a clear understanding of which sensors you need, where to place them, expected ROI, and next steps for modernizing your operation.",
    icon: Action,
  },
  {
    title: "Customized IoT Strategy",
    description:
      "Discuss your unique crops, field conditions, and goals to receive tailored recommendations that address your specific farming challenges.",
    icon: Goals,
  },
];
const whatToExpect = [
  {
    step: "Farm Background Discussion",
    description:
      "We'll start by understanding your farm size, crops, current irrigation methods, and specific challenges you're facing.",
  },
  {
    step: "Technology Needs Assessment",
    description:
      "Our team will evaluate which sensors and monitoring tools would deliver the best ROI for your specific operation and budget.",
  },
  {
    step: "Solution Options Review",
    description:
      "We'll discuss various IoT configurations, installation approaches, data dashboard features, and associated costs.",
  },
  {
    step: "Next Steps & Timeline",
    description:
      "Receive clear guidance on implementation timeline, installation process, training, and ongoing support options.",
  },
];
const consultationFaqs = [
  {
    question: "How long does a free farm consultation last?",
    answer:
      "Our initial consultations typically last 45-60 minutes, providing sufficient time to understand your farm operation and provide meaningful technology recommendations.",
  },
  {
    question: "Do I need to bring any information about my farm?",
    answer:
      "While not required, bringing details about your farm size, crop types, irrigation system, soil conditions, and current challenges helps us provide more specific recommendations. Photos of your fields are also helpful.",
  },
  {
    question: "What types of farms do you work with?",
    answer:
      "We work with all types of agricultural operations including row crops, orchards, vineyards, vegetables, greenhouses, and livestock operations. Our IoT solutions scale from small specialty farms to large commercial operations.",
  },
  {
    question: "Will I be obligated to purchase after the consultation?",
    answer:
      "Absolutely not. Our free consultation is designed to help you make informed decisions about agricultural technology without any pressure or obligation to purchase.",
  },
  {
    question: "Can I bring my farm manager or agronomist to the consultation?",
    answer:
      "Yes, we encourage you to bring your farm manager, agronomist, or business partners. Agricultural technology decisions often involve multiple stakeholders.",
  },
];
---

<BaseLayout>
  <section>
    <Wrapper variant="standard" class="pb-12 pt-48">
      <div class="max-w-xl">
        <Text
          tag="h1"
          variant="displayLG"
          class="text-accent-800 font-display text-balance"
        >
          Free farm technology consultation
        </Text>
        <Text
          tag="p"
          variant="textSM"
          class="text-base-600 leading-relaxed border-accent-500 mt-2"
        >
          Take the first step towards smarter farming with confidence. Our experienced agronomists and IoT specialists offer complimentary farm assessments to help you understand how sensor technology can increase yields, reduce costs, and save time on your operation.
        </Text>
      </div>
      <ul class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 mt-12 gap-8">
        {
          consultationBenefitList.map((benefit) => (
            <li class="flex items-start gap-2 text-sm text-base-600">
              <Check slot="icon" size="base" class="text-secondary-500" />
              <span>{benefit}</span>
            </li>
          ))
        }
      </ul>
    </Wrapper>

    <Wrapper variant="standard" class="py-12 lg:py-24">
      <div
        class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 items-start gap-y-8 gap-x-4"
      >
        <Text
          tag="p"
          variant="textXS"
          class="text-secondary-500 tracking-wide uppercase"
        >
          Complimentary & confidential
        </Text>
        <div class="lg:col-span-3">
          <Text
            tag="h2"
            variant="displayLG"
            class="text-accent-800 font-display text-balance"
          >
            Why choose our free farm consultation?
          </Text>
          <Text tag="p" variant="textLG" class="text-base-600 mt-4">
            We believe every farmer deserves access to expert agricultural technology advice. Our free consultation is designed to help you understand your options, get clear answers about IoT solutions, and move forward with confidenceâ€”without any pressure or obligation.
          </Text>
        </div>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-4 mt-12 lg:mt-24 gap-8">
        {
          consultationBenefits.map((benefit) => (
            <div class="bg-base-50  p-8 flex flex-col">
              {benefit.icon && (
                <benefit.icon class="size-8 text-secondary-400 " />
              )}
              <Text
                tag="h3"
                variant="textXL"
                class="text-accent-800 font-display mt-12"
              >
                {benefit.title}
              </Text>
              <Text
                tag="p"
                variant="textSM"
                class="text-base-600 font-medium mt-2"
              >
                {benefit.description}
              </Text>
            </div>
          ))
        }
      </div>
    </Wrapper>
    <Wrapper variant="standard" class="py-12 lg:py-24">
      <Text
        tag="h2"
        variant="displayMD"
        class="text-accent-800 font-display text-balance"
      >
        Schedule your farm consultation
      </Text>
      <div class="grid grid-cols-1 lg:grid-cols-2 mt-12">
        <dl class="p-8 h-full flex flex-col justify-start bg-base-50 space-y-8">
          {
            whatToExpect.map((item, index) => (
              <div class="bg-white  p-8 flex flex-col items-start">
                <dt>
                  <Text
                    tag="p"
                    variant="displayXL"
                    class="text-accent-800 font-display italic font-medium"
                  >
                    {index + 1}
                  </Text>
                  <Text
                    tag="h3"
                    variant="displaySM"
                    class="text-base-800 font-display mt-12"
                  >
                    {item.step}
                  </Text>
                </dt>
                <dd>
                  <Text
                    tag="p"
                    variant="textSM"
                    class="text-base-600 text-balance"
                  >
                    {item.description}
                  </Text>
                </dd>
              </div>
            ))
          }
        </dl>
        <div>
          <form class="space-y-4 p-8 bg-accent-900 sticky top-8 lg:top-48">
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
              <div>
                <label
                  for="firstName"
                  class="block text-xs font-medium text-base-300"
                >
                  First Name *
                </label>
                <input
                  type="text"
                  id="firstName"
                  name="firstName"
                  required
                  class="w-full px-3 py-2 border-b border-transparent h-12 bg-white/5 focus:outline-none focus:bg-white/8 text-white text-xs focus:ring-0"
                />
              </div>
              <div>
                <label
                  for="lastName"
                  class="block text-xs font-medium text-base-300"
                >
                  Last Name *
                </label>
                <input
                  type="text"
                  id="lastName"
                  name="lastName"
                  required
                  class="w-full px-3 py-2 border-b border-transparent h-12 bg-white/5 focus:outline-none focus:bg-white/8 text-white text-xs focus:ring-0"
                />
              </div>
            </div>
            <div class="space-y-1">
              <label
                for="email"
                class="block text-xs font-medium text-base-300"
              >
                Email Address *
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-3 py-2 border-b border-transparent h-12 bg-white/5 focus:outline-none focus:bg-white/8 text-white text-xs focus:ring-0"
              />
            </div>
            <div class="space-y-1">
              <label
                for="phone"
                class="block text-xs font-medium text-base-300"
              >
                Phone Number *
              </label>
              <input
                type="tel"
                id="phone"
                name="phone"
                required
                class="w-full px-3 py-2 border-b border-transparent h-12 bg-white/5 focus:outline-none focus:bg-white/8 text-white text-xs focus:ring-0"
              />
            </div>
            <div class="space-y-1">
              <label
                for="farmType"
                class="block text-xs font-medium text-base-300"
              >
                Farm Type *
              </label>
              <select
                id="farmType"
                name="farmType"
                required
                class="w-full px-3 py-2 border-b border-transparent h-12 bg-white/5 focus:outline-none focus:bg-white/8 text-white text-xs focus:ring-0"
              >
                <option value="">Select your farm type</option>
                <option value="row-crops">Row Crops (Corn, Soy, Wheat)</option>
                <option value="orchard">Orchard (Fruit Trees)</option>
                <option value="vineyard">Vineyard (Grapes)</option>
                <option value="vegetables">Vegetables</option>
                <option value="greenhouse">Greenhouse / Indoor</option>
                <option value="livestock">Livestock</option>
                <option value="mixed">Mixed Operation</option>
                <option value="other">Other</option>
              </select>
            </div>
            <div class="space-y-1">
              <label
                for="farmSize"
                class="block text-xs font-medium text-base-300"
              >
                Farm Size *
              </label>
              <select
                id="farmSize"
                name="farmSize"
                required
                class="w-full px-3 py-2 border-b border-transparent h-12 bg-white/5 focus:outline-none focus:bg-white/8 text-white text-xs focus:ring-0"
              >
                <option value="">Select farm size</option>
                <option value="small">Under 100 acres</option>
                <option value="medium">100-500 acres</option>
                <option value="large">500-1000 acres</option>
                <option value="commercial">1000+ acres</option>
              </select>
            </div>
            <div class="space-y-1">
              <label
                for="preferredDate"
                class="block text-xs font-medium text-base-300"
              >
                Preferred Date
              </label>
              <input
                type="date"
                id="preferredDate"
                name="preferredDate"
                class="w-full px-3 py-2 border-b border-transparent h-12 bg-white/5 focus:outline-none focus:bg-white/8 text-white text-xs focus:ring-0"
              />
            </div>
            <div class="space-y-1">
              <label
                for="preferredTime"
                class="block text-xs font-medium text-base-300"
              >
                Preferred Time
              </label>
              <select
                id="preferredTime"
                name="preferredTime"
                class="w-full px-3 py-2 border-b border-transparent h-12 bg-white/5 focus:outline-none focus:bg-white/8 text-white text-xs focus:ring-0"
              >
                <option value="">Select preferred time</option>
                <option value="morning">Morning (9 AM - 12 PM)</option>
                <option value="afternoon">Afternoon (12 PM - 5 PM)</option>
                <option value="evening">Evening (5 PM - 7 PM)</option>
              </select>
            </div>
            <div class="space-y-1">
              <label
                for="consultationType"
                class="block text-xs font-medium text-base-300"
              >
                Consultation Type
              </label>
              <select
                id="consultationType"
                name="consultationType"
                class="w-full px-3 py-2 border-b border-transparent h-12 bg-white/5 focus:outline-none focus:bg-white/8 text-white text-xs focus:ring-0"
              >
                <option value="on-site">On-Site Farm Visit</option>
                <option value="phone">Phone Consultation</option>
                <option value="video">Video Conference</option>
              </select>
            </div>
            <div class="space-y-1">
              <label
                for="message"
                class="block text-xs font-medium text-base-300"
              >
                Brief Description of Your Farm Challenges
              </label>
              <textarea
                id="message"
                name="message"
                rows="4"
                placeholder="Tell us about your current challenges with irrigation, soil monitoring, crop health, or other farming concerns..."
                class="w-full px-3 py-2 border-b border-transparent bg-white/5 focus:outline-none focus:bg-white/8 text-white text-xs focus:ring-0"
              ></textarea>
            </div>
            <div class="flex items-start space-x-3">
              <input
                type="checkbox"
                id="privacy"
                name="privacy"
                required
                class="mt-1 size-4 text-accent-600 focus:ring-accent-500 ring-offset-accent-900 border-white/10 rounded bg-accent-800"
              />
              <label for="privacy" class="text-xs text-base-400">
                I agree to FarmEasy's privacy policy and consent to being
                contacted regarding my consultation request. View our <a
                  href="/privacy"
                  class="text-secondary-400 hover:text-accent-700 underline"
                  >Privacy Policy</a
                >.
              </label>
            </div>
            <Button variant="muted" size="sm" type="submit" class="w-full">
              Schedule Free Farm Consultation
            </Button>
          </form>
        </div>
      </div>
    </Wrapper>

    <Wrapper variant="standard" class="py-12 lg:py-24">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-y-8 gap-x-12">
        <Text
          tag="h2"
          variant="displayMD"
          class="text-accent-800 font-display text-balance"
        >
          Frequently Asked Questions
        </Text>
        <div class="lg:col-span-2 divide-y divide-base-100 space-y-4">
          {
            consultationFaqs.map((faq) => (
              <details class="transition-colors pb-4 group">
                <summary class=" text-lg cursor-pointer text-accent-800 flex justify-between items-center group-open:text-secondary-500">
                  <span>{faq.question}</span>
                  <Plus
                    slot="icon"
                    size="sm"
                    class="text-base-700 transition-transform group-open:rotate-180 duration-300"
                  />
                </summary>
                <div class="mt-4 text-base-700 leading-relaxed">
                  <Text tag="p" variant="textBase">
                    {faq.answer}
                  </Text>
                </div>
              </details>
            ))
          }
        </div>
      </div>
      <div class="bg-base-50 p-8 lg:p-12 mt-12 lg:mt-24">
        <div
          class="flex flex-col lg:flex-row items-start lg:items-center justify-between gap-6 lg:items-end"
        >
          <div>
            <Text
              tag="h3"
              variant="displaySM"
              class="text-accent-800 font-display"
            >
              Need Immediate Assistance?
            </Text>
            <Text
              tag="p"
              variant="textSM"
              class="text-base-600 mt-1 text-balance"
            >
              For urgent farm monitoring issues or questions about our IoT solutions, contact our team directly. We're here to help.
            </Text>
            <div class="space-y-12 gap-4 mt-8">
              <div>
                <Text
                  tag="p"
                  variant="textSM"
                  class="font-semibold text-accent-800"
                >
                  Quick Contact
                </Text>
                <div class="space-y-1 text-sm text-base-700 mt-4">
                  <a
                    href="mailto:support@farmeasy.com"
                    class="text-secondary-500 hover:text-accent-80 transition-colors text-xs block"
                  >
                    support@farmeasy.com
                  </a>
                  <a
                    href="tel:+15551234567"
                    class="text-secondary-500 hover:text-accent-80 transition-colors text-xs block"
                  >
                    (555) 123-4567
                  </a>
                </div>
              </div>
              <div class="text-sm text-base-700 mt-4">
                <Text
                  tag="p"
                  variant="textSM"
                  class="font-semibold text-accent-800"
                >
                  Office Hours
                </Text>
                <Text tag="p" variant="textXS" class="mt-4">
                  <strong>Mon-Fri:</strong> 8AM-6PM
                  <br />
                  <strong>Sat:</strong> 9AM-2PM
                </Text>
              </div>
            </div>
          </div>

          <Button
            isLink={true}
            href="/contact"
            variant="default"
            size="sm"
            class="w-full lg:w-fit shrink-0"
          >
            Contact Us Directly
          </Button>
        </div>
      </div>
    </Wrapper>
  </section>
</BaseLayout>
